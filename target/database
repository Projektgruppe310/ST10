--creating the database

CREATE DATABASE Batches;

CREATE TYPE beers AS ENUM('PILSNER', 'WHEAT', 'IPA', 'STOUT', 'ALE', 'ALCOHOL_FREE');

CREATE TABLE Temperatures(
id SERIAL PRIMARY KEY,
col0010 INT NOT NULL,
col0020 INT NOT NULL,
col0030 INT NOT NULL,
col0040 INT NOT NULL,
col0050 INT NOT NULL,
col0100 INT NOT NULL
);

CREATE TABLE Humidities(
id SERIAL PRIMARY KEY,
col0010 INT NOT NULL,
col0020 INT NOT NULL,
col0030 INT NOT NULL,
col0040 INT NOT NULL,
col0050 INT NOT NULL,
col0100 INT NOT NULL
);

CREATE TABLE State_times(
id SERIAL PRIMARY KEY,
Deactived INT NOT NULL,
Clearing INT NOT NULL,
Stopped INT NOT NULL,
Starting INT NOT NULL,
Idle INT NOT NULL,
Suspended INT NOT NULL,
Execute INT NOT NULL,
Stopping INT NOT NULL,
Aborting INT NOT NULL,
Aborted INT NOT NULL,
Resetting INT NOT NULL,
Completing INT NOT NULL,
Complete INT NOT NULL,
Deactivating INT NOT NULL,
Activating INT NOT NULL
);

CREATE TABLE Batch(
batch_id SERIAL PRIMARY KEY,
batch_date DATE NOT NULL,
product_type beers NOT NULL,
Acceptable_amount_produced INT,
Defect_amount_produced INT,
Total_amount_produced INT,
Temperature_logs int REFERENCES Temperatures(id) NOT NULL,
Humidity_logs int REFERENCES Humidities(id) NOT NULL,
Time_in_states int REFERENCES State_times NOT NULL
);
